<resources>

    <style name="Roxiemon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorSurface">@color/colorPrimary</item>

        <item name="fontFamily">@font/karla</item>
        <item name="bottomSheetDialogTheme">@style/Roxiemon.BottomSheetDialog</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="Roxiemon.BottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Roxiemon.BottomSheet</item>
    </style>

    <style name="Widget.Roxiemon.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Roxiemon.RoundedTop</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
    </style>

    <style name="ShapeAppearance.Roxiemon.RoundedTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_m</item>
        <item name="cornerSizeTopLeft">@dimen/radius_m</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>